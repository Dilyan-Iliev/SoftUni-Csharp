@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post">

                                <div class="form-outline mb-4" style="display: flex; flex-direction: column;">
                                    <label asp-for="Username" class="form-label" style="margin-bottom: 5px;">Username</label>
                                    <input asp-for="Username" class="form-control form-control-lg" />
                                    <span asp-validation-for="Username" class="text-danger" style="margin-top: 5px;"></span>
                                </div>

                                <div class="form-outline mb-4" style="display: flex; flex-direction: column;">
                                    <label asp-for="Email" class="form-label" style="margin-bottom: 5px;">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger" style="margin-top: 5px;"></span>
                                </div>


                                <div class="form-outline mb-4" style="display: flex; flex-direction: column;">
                                    <label asp-for="Password" class="form-label" style="margin-bottom: 5px;">Password</label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger" style="margin-top: 5px;"></span>
                                </div>


                                <div class="form-outline mb-4" style="display: flex; flex-direction: column;">
                                    <label asp-for="ConfirmPassword" class="form-label" style="margin-bottom: 5px;">Repeat your password</label>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="margin-top: 5px;"></span>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <button id="registerSubmit" type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a href="/Account/Login"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}