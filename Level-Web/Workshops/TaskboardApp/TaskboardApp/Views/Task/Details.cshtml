@using TaskboardApp.Extensions;
@model DetailsTaskViewModel
@{
    ViewData["Title"] = "View Task Details";
}

<div class="d-flex justify-content-center">
    <div class="card " style="width: 50rem;">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Title</h3>
            <p class="card-text">
                <span class="fw-bold">
                    Description:
                </span>@Model.Description
            </p>
            <p class="card-text">
                <span class="fw-bold">
                    Board:
                </span>@Model.Board
            </p>
            <p class="card-text">
                <span class="fw-bold">
                    Owner:
                </span>@User?.Identity?.Name
            </p>
            <p class="card-text">
                <span class="fw-bold">
                    Created on:
                </span>@Model.CreatedOn
            </p>
            @if (Model.Owner == User.GetById())
            {
                <tr class="actions">
                    <th><span class="fw-bold">Actions:</span></th>
                    <td>
                        <a asp-controller="Task" asp-action="Edit" asp-routeid="@Model.Id" class="btn btn-primary">Edit</a>
                        <form class="input-group-sm" asp-controller="Task" asp-action="Delete" asp-route-id="@Model.Id">
                            <input class="btn btn-danger mb-2" type="submit" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        </div>
    </div>
</div>